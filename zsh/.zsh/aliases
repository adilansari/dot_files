# master
alias zshconfig="vi ~/.zshrc"
alias zshreload="source ~/.zshrc"
aliases () {
	grep "$1" ~/.zsh/aliases
	grep "$1" ~/.zsh/tigris_aliases
}

# editor
alias vi='nvim'

# git aliases
alias g='git status'
alias gad='git add'
alias gco='git checkout'
alias gcm='git commit -S'
alias glog='git log --oneline ${1:---graph}'
alias gst='git stash'
alias gb='git branch'
alias gd='git diff'
alias gd_stat='git diff --stat main..HEAD'
alias greb="git rebase --exec 'git commit --amend --no-edit -n -S' -i main"

## github
alias ghrelease="gh pr create -B release -H main"
alias ghrunlog='gh run view --log $(gh run list --branch $(git rev-parse --abbrev-ref HEAD) --workflow go-test --json databaseId | jq ".[0].databaseId") | tail -n 200'

# tmux aliases
alias tms='tmuxinator start'
alias tml='tmux list-sessions'
tmo () {
	tmux new -s $1
}

# Filesystem
alias ..='cd ..'            # Go up one directory
alias ...='cd ../..'        # Go up two directories
alias ....='cd ../../..'    # And for good measure
alias l='ls -lah'           # Long view, show hidden
alias la='ls -AF'           # Compact view, show hidden
alias ll='ls -lFh'          # Long view, no hidden

# Jekyll
alias jekyll_serve="bundle exec jekyll build && bundle exec jekyll serve"

# kubernetes
alias k="kubectl"

# Helpers
alias grep='grep --color=auto' # Always highlight grep search term

# virutalenv
alias venv='. env/bin/activate'
